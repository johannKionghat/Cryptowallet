 <div class="col-md-12">
 <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Transaction /</span> Send</h4>
    {% include 'partials/flashes.html.twig'%}
        <div class="card mb-4 my-3">
            <div class="p-3 m-3 d-flex justify-content-center align-items-center gap-2">
                <img
                src="{{cryptotosend.image}}"
                alt="image-crypto"
                class="d-block rounded"
                height="25"
                width="25"
                id="uploadedAvatar"
                style="object-fit: cover;"
                />
                <div>{{cryptotosend.name}}</div>
            </div>
            <div class="p-3 d-flex justify-content-start align-items-center gap-2 flex-column">
                <div><label>Rate : 1 {{cryptotosend.name}} = € {{rating}}</label></div>
                <div><label> For € 1 you get {{(1 / rating)|number_format(5, '.', ',') }} {{cryptotosend.abreviation|upper}}</label></div>
            </div>
            <div class="card-body">
            {{ form_start(formSendStep2) }}
            <div class="row">
               
                <div class="mb-3 col">
                <label for="email" class="form-label">Adress to send</label>
                {{form_row(formSendStep2.adressTo)}}
                </div>
                <div class="mb-3 col">
                <label class="form-label" for="password">Amount in EURO</label>
                {{form_row(formSendStep2.amount)}}
                </div>
            </div>
            <div class="d-flex gap-2 mt-2">
                {{ form_row(formSendStep2.Send) }}
                <a href="{{path('transaction.send')}}" class="btn btn-secondary">Annuler</a>
            </div>
             {{ form_end(formSendStep2) }}
            </form>
        </div>
        </div>
    </div>

