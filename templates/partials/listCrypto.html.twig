<ul class="p-0 m-0">
{% for cryptocurrency in cryptocurrencies %}
<li class="d-flex mb-4 pb-1">
    <div class="avatar flex-shrink-0 me-3">
    <img
        src="{{asset('/assets/images/Cryptocurrency/')}}{{cryptocurrency.image}}"
        alt="user-avatar"
        class="d-block rounded"
        height="50"
        width="50"
        id="uploadedAvatar"
        style="object-fit: cover;"
        />
    </div>
    <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
    <div class="me-2">
        {% set cryptocurrencyName = cryptocurrency.name | lower %}
        <h6 class="mb-0"
        data-bs-toggle="tooltip"
        data-bs-offset="0,4"
        data-bs-placement="right"
        data-bs-html="true"
        title="<span>coin</span>"
        >{{cryptocurrencyName}}</h6>
        <small class="text-muted" data-bs-toggle="tooltip"
        data-bs-offset="0,4"
        data-bs-placement="right"
        data-bs-html="true"
        title="<span>price</span>"
        >
        {% for key in prices|keys %}
            {% if key == cryptocurrencyName %}
                {{prices[cryptocurrencyName].eur}}
            {% endif %}
        {% endfor %}
        {{app.user.currency}}
        </small>
    </div>
    <div class="d-flex gap-2">
        <div class="user-progress">
            <small class="fw-semibold" data-bs-toggle="tooltip"
            data-bs-offset="0,4"
            data-bs-placement="right"
            data-bs-html="true"
            title="<span>my solde</span>"
            >0 {{cryptocurrency.abreviation}}</small> 
        </div>
        <div>hello</div>
    </div>
    </div>
</li>
{% endfor %}
</ul>