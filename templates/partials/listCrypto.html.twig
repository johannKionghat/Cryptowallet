<ul class="p-0 m-0">
{% for cryptocurrency in cryptocurrencies %}
<li class="d-flex mb-4 pb-1">
    <div class="avatar flex-shrink-0 me-3">
    <img
        src="{{asset('/assets/images/Cryptocurrency/')}}{{cryptocurrency.image}}"
        alt="user-avatar"
        class="d-block rounded"
        height="50"
        width="50"
        id="uploadedAvatar"
        style="object-fit: cover;"
        />
    </div>
    <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
    <div class="me-2">
        <h6 class="mb-0">{{cryptocurrency.name}}</h6>
        <small class="text-muted">{{cryptocurrency.currentprice}} {{app.user.currency}}</small>
    </div>
    <div class="user-progress">
        <small class="fw-semibold">0</small>
    </div>
    </div>
</li>
{% endfor %}
</ul>