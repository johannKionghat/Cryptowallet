<div class="col-xl-12">
<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Wallet</span></h4>
  <div class="nav-align-top mb-4">
    <ul class="nav nav-pills mb-3" role="tablist">
        <li class="nav-item">
        <button
            type="button"
            class="nav-link active"
            role="tab"
            data-bs-toggle="tab"
            data-bs-target="#navs-pills-top-Customer"
            aria-controls="navs-pills-top-Customer"
            aria-selected="true"
        >
            All
        </button>
        </li>
        <li class="nav-item">
        <a href="{{path('wallet.add')}}">
           <button
            type="button"
            class="nav-link"
            role="tab"
            data-bs-toggle="tab"
            data-bs-target="#navs-pills-top-Add"
            aria-controls="navs-pills-top-Add"
            aria-selected="false">
            New Wallet
        </button>
        </a>
        </li>
    </ul>
    {# content of tabs #}
    <div class="tab-content">
        {# view of all customers #}
        <div class="tab-pane fade show active" id="navs-pills-top-Customer" role="tabpanel">
          <div class="table" style="overflow:auto;">
            <table class="table">
              <tbody class="table-border-bottom-0">
              {% for wallet in wallets %}
                <tr>
                  <td><strong>{{wallet.name}}</strong></td>
                    <td>
                    {% if wallet.name != 'Default' %}
                    <div class="dropdown">
                      <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                        <i class="bx bx-dots-vertical-rounded"></i>
                      </button>
                      <div class="dropdown-menu">
                        <a class="dropdown-item" href="{{path('wallet.edit',{id:wallet.id})}}"
                          ><i class="bx bx-edit-alt me-1"></i> Edit</a>
                            <a class="dropdown-item" href="{{path('wallet.delete',{id:wallet.id})}}">
                          <i class='me-2 bx bx-trash'></i>Delete
                        </a>
                      </div>
                      {% endif %}
                  </td>
                  <td>
                  
                  </td>
                  <td>
                  </td>
                </tr>
              {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
    </div>
  </div>
</div>
