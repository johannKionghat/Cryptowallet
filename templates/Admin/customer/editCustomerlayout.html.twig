<!-- Content -->
    <div class="col-md-12">
        {% include 'partials/flashes.html.twig'%}
        <div class="card mb-4">
        <h5 class="card-header">Edit Customer Details</h5>
        <!-- Account -->
        <div class="card-body">
            <div class="d-flex align-items-start align-items-sm-center gap-4">
            <img
                src="{{asset('/assets/images/users/')}}{{customer.thumbnail}}"
                alt="user-avatar"
                class="d-block rounded"
                height="100"
                width="100"
                id="uploadedAvatar"
                style="object-fit: cover;"
            />
            {{ form_start(formEditCustomer) }}
            {{ form_row(formEditCustomer.thumbnailFile) }}
            </div>
        </div>
        <hr class="my-0" />
        <div class="card-body">
            <div class="row">
                <div class="mb-3 col-md-6">
                <label for="firstName" class="form-label">First Name</label>
                {{form_row(formEditCustomer.firstname)}}
                </div>
                <div class="mb-3 col-md-6">
                <label for="lastName" class="form-label">Last Name</label>
                {{form_row(formEditCustomer.lastname)}}
                </div>
                <div class="mb-3 col-md-6">
                <label for="address" class="form-label">Address</label>
                {{form_row(formEditCustomer.address)}}
                </div>
                <div class="mb-3 col-md-6">
                <label for="address" class="form-label">Phone Number</label>
                {{form_row(formEditCustomer.telephone)}}
                </div>
                <div class="mb-3 col-md-6">
                <label for="zipCode" class="form-label">Zip Code</label>
                {{form_row(formEditCustomer.zipcode)}}
                </div>
                <div class="mb-3 col-md-6">
                <label class="form-label" for="country">Country</label>
                {{form_row(formEditCustomer.countryFrom)}}
                </div>
                <div class="mb-3 col-md-6">
                <label class="form-label" for="country">City</label>
                {{form_row(formEditCustomer.cityFrom)}}
                </div>
                <div class="mb-3 col-md-6">
            </div>
            <div class="d-flex mt-2">
                {{ form_row(formEditCustomer.save) }}
            </div>
            {{ form_end(formEditCustomer) }}
        </div>
        <!-- /Account -->
        </div>
    </div>
<!-- / Content -->