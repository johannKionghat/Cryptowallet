<div class="col-xl-12">
  <div class="nav-align-top mb-4">
    <ul class="nav nav-pills mb-3" role="tablist">
        <li class="nav-item">
        <button
            type="button"
            class="nav-link active"
            role="tab"
            data-bs-toggle="tab"
            data-bs-target="#navs-pills-top-Customer"
            aria-controls="navs-pills-top-Customer"
            aria-selected="true"
        >
            Customer(s)
        </button>
        </li>
        <li class="nav-item">

        <button
            type="button"
            class="nav-link"
            role="tab"
            data-bs-toggle="tab"
            data-bs-target="#navs-pills-top-Add"
            aria-controls="navs-pills-top-Add"
            aria-selected="false"
        >
            Add customer
        </button>
        </li>
    </ul>
    {# content of tabs #}
    <div class="tab-content">
        {# view of all customers #}
        <div class="tab-pane fade show active" id="navs-pills-top-Customer" role="tabpanel">
          <div class="table" style="overflow:auto;">
            <table class="table">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Firstname</th>
                  <th>Lastname</th>
                  <th>Email</th>
                  <th>Profil</th>
                  <th>Roles</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody class="table-border-bottom-0">
              {% for user in users %}
                    <tr>
                  <td>{{user.id}}</td>
                  <td><strong>{{user.firstname}}</strong></td>
                  <td>{{user.lastname}}</td>
                  <td>{{user.email}}</td>
                  <td><img
                        src="{{asset('/assets/images/users/')}}{{user.thumbnail}}"
                        alt="user-avatar"
                        class="d-block rounded"
                        height="50"
                        width="50"
                        id="uploadedAvatar"
                        style="object-fit: cover;"
                        />
                  </td>
                  <td>
                      <strong>
                          {% if user.roles.0 == 1 %}Admin{% endif %}
                          {% if user.roles.0 == 'ROLE_USER' %}User{% endif %}
                      </strong>
                  </td>
                  <td>
                      {% if user.isVerified == 1 %}<span class="badge bg-label-success me-1">Verified</span></td>{% endif %}
                      {% if user.isVerified == 0 %}<span class="badge bg-label-danger me-1">No Verified</span></td>{% endif %}
                      
                  <td>
                  {% if app.user.id != user.id%}
                    <div class="dropdown">
                      <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                        <i class="bx bx-dots-vertical-rounded"></i>
                      </button>
                      <div class="dropdown-menu">
                        <a class="dropdown-item" href="{{path('setting.editCustomer',{id:user.id})}}"
                          ><i class="bx bx-edit-alt me-1"></i> Edit</a>
                            <a class="dropdown-item" href="{{path('setting.deleteCustomer',{id:user.id})}}">
                          <i class='me-2 bx bx-trash'></i>Delete
                        </a>
                      </div>
                    </div>
                    {% endif %}
                  </td>
                </tr>
              {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
        {# formAddCustomer #}
        <div class="tab-pane fade show" id="navs-pills-top-Add" role="tabpanel">
          {# mettre le formulaire d'ajout de customer #}
          <p>formulaire d'ajout de customer par l'admin</p>
        </div>
    </div>
  </div>
</div>
